@model ConfidentialEternalPottery.DomainModel.Models.Room

@{
    ViewBag.Title = "Delete Room";
}

<h2>@ViewBag.Title @Model.Number</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="well">
        <div class="row">
            <div class="col-md-10">
                Are you sure you want to delete this room @Model.Number?
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-danger" value="Delete room" />
            </div>
        </div>
    </div>

    @Html.HiddenFor(model => model.RoomId)
}
@Html.ActionLink("Back to List", "Index")
