@model ConfidentialEternalPottery.DomainModel.Models.Guest

@{
    ViewBag.Title = "Edit guest";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Edit", "Guest", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.GuestId);
    @Html.HiddenFor(model => model.BookingId);
    <div class="form-group">
        <label for="LastName" class="col-sm-2 control-label">Firstname</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
    </div>
    <div class="form-group">
        <label for="LastName" class="col-sm-2 control-label">Lastname</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
    </div>
    <div class="form-group">
        <label for="LastName" class="col-sm-2 control-label">Birthday</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Dob, new { @class = "form-control", type= "date" })
            @Html.ValidationMessageFor(model => model.Dob)
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="col-sm-3 pull-right btn btn-default">Save changes</button>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
