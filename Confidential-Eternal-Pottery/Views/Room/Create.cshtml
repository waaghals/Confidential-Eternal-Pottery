@model ConfidentialEternalPottery.ViewModels.CreateRoom

@{
    ViewBag.Title = "Create a new room";
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
     {
         Text = "Two",
         Value = "2"
     });
    listItems.Add(new SelectListItem
    {
        Text = "Three",
        Value = "3"
    });
    listItems.Add(new SelectListItem
            {
                Text = "Five",
                Value = "5"
            });
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Room", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Number, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Number, new { type = "number", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Number)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Capacity, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Capacity, listItems, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MinimumPrice, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.MinimumPrice, new { type = "number", step = "any", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MinimumPrice)
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="col-sm-3 pull-right btn btn-default">Create new room</button>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Room", null)
</div>