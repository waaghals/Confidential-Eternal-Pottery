@model ConfidentialEternalPottery.DomainModel.Models.Room
@{
    ViewBag.Title = "Update Room";
}

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
     {
         Text = "Two",
         Value = "2"
     });
    listItems.Add(new SelectListItem
    {
        Text = "Three",
        Value = "3"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Five",
        Value = "5"
    });
}

<h2>@ViewBag.Title @Model.Number</h2>
@using (Html.BeginForm("Update", "Room", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.RoomId);
    <div class="form-group">
        @Html.LabelFor(model => model.Number, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Number, new { type = "number", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Number)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Capacity, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Capacity, listItems, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MinimumPrice, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.MinimumPrice, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MinimumPrice)
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="col-sm-3 pull-right btn btn-default">Save changes</button>
    </div>
}

