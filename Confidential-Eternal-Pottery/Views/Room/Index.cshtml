@model IEnumerable<ConfidentialEternalPottery.DomainModel.Models.Room>
@{
    ViewBag.Title = "Room Overview";
}

<h2>Room overview</h2>
<div class="row">


    @Html.ActionLink("Create new room", "Create", "Room", new { }, new { @class = "btn btn-default pull-right" })
    <table class="table table-hover">
        <tr>
            <th># @Html.DisplayNameFor(model => model.Number)</th>
            <th><i class="fa fa-group"></i> @Html.DisplayNameFor(model => model.Capacity)</th>
            <th colspan="2"><i class="fa fa-eur"></i> @Html.DisplayNameFor(model => model.MinimumPrice)</th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Number)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                <td><i class="fa fa-eur"></i> @Html.DisplayFor(modelItem => item.MinimumPrice)</td>
                <td class="text-right">
                    @Html.ActionLink("Custom pricing", "Index", "PriceMoment", new { roomId = @item.RoomId }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit", "Update", "Room", new { roomId = @item.RoomId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", "Room", new { roomId = @item.RoomId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>